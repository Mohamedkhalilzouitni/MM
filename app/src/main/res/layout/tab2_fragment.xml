<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:id="@+id/rm"
                android:layout_height="match_parent"
                android:background="@mipmap/back"
    android:paddingRight="10dp"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="750dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/R_M"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="30dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Données Médicales"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/centre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Centre :"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/centre_"
                android:layout_width="match_parent"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/numtel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Téléphone du centre :"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numtel_"
                android:layout_width="match_parent"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:paddingLeft="10dp"
                android:gravity="center"
                android:layout_weight="5"
                android:inputType="phone"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/medecin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Medecin traitant :"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/medecin_"
                android:layout_width="match_parent"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Service :"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/service_"
                android:layout_width="match_parent"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </Spinner>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/localisation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Localisation : "
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/localisation_"
                android:layout_width="match_parent"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/histologie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Histologie :"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/histologie_"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|right"
                android:layout_weight="5"
                android:background="@drawable/cborder"
                android:padding="4dp">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Stade :"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/stade_"
                android:background="@drawable/cborder"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Détails :"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/details_"
                android:background="@drawable/cborder"
                android:layout_width="match_parent"
                android:padding="4dp"
                android:lines="40"
                android:layout_weight="5"
                android:layout_height="80dp"
                android:inputType="textCapWords"
                android:layout_gravity="center|right">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/strategie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:gravity="center"
                android:text="Stratégie :"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/strategie_"
                android:layout_width="match_parent"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="40dp"
                android:layout_gravity="center|right">

            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp">

            <EditText
                android:id="@+id/protocole_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="protocole"
                android:inputType="textCapWords"
                android:maxLines="1"
                android:textColorHint="#333"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/terminer"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shapelogin"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Terminer"
                android:alpha="0.8"
                android:textSize="20dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            />
    </LinearLayout>
</ScrollView>