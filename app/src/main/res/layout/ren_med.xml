<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/rm"
    android:layout_height="match_parent"
    android:background="@mipmap/back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/RenM"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:layout_margin="35dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Données Médicales"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/centre"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Centre :"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/centre_"
                android:layout_width="wrap_content"
                android:background="@drawable/cborder"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="2dp"
                android:text="Téléphone du centre :"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/numt_"
                android:layout_width="wrap_content"
                android:background="@drawable/cborder"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">

            </TextView>
        </LinearLayout>
        

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/medecin"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2dp"
            android:gravity="center"
            android:text="Medecin traitant :"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/medecin_"
                android:layout_width="wrap_content"
                android:background="@drawable/cborder"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="4dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">

            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/service"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Service :"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/service_"
                android:layout_width="wrap_content"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">

            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/localisation"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:gravity="center"
            android:text="Localisation : "
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/localisation_"
                android:layout_width="wrap_content"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:layout_weight="5"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">
            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/histologie"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:gravity="center"
            android:text="Histologie :"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/histologie_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="5"
                android:background="@drawable/cborder"
                android:padding="4dp">

            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stade"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp"
            android:text="Stade :"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stade_"
                android:background="@drawable/cborder"
                android:layout_width="wrap_content"
                android:padding="4dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">

            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/strategie"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="2dp"
        android:text="Stratégie :"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/strategie_"
                android:layout_width="wrap_content"
                android:background="@drawable/cborder"
                android:padding="4dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:layout_gravity="center|right">

            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/protocole"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="2dp"
            android:text="Protocole :"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginBottom="90dp" >

            <TextView
                android:id="@+id/protocole_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:textColor="#000"
                android:textSize="18dp"
                android:gravity="center"
                android:padding="2dp"
                android:background="@drawable/cborder"
                android:textColorHint="#888"
                android:visibility="visible" />

        </LinearLayout>
    </LinearLayout>


</ScrollView>